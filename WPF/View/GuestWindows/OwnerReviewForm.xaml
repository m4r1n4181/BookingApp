<Window x:Class="BookingApp.View.OwnerReviewForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingApp.View"
        mc:Ignorable="d"
        Title="OwnerReviewForm" Height="450" Width="800">
    <Grid>
        <Button Command="{Binding SaveCommand}" Content="Save" HorizontalAlignment="Left" Margin="218,358,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="CleanlinessTextBox" HorizontalAlignment="Left" Margin="238,65,0,0" TextWrapping="Wrap" Text="{Binding Path = Clean, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Top" Width="120" />
        <TextBox x:Name="OwnerTextBox" HorizontalAlignment="Left" Margin="238,146,0,0" TextWrapping="Wrap" Text="{Binding Path = Rule, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="CommentTextBox" HorizontalAlignment="Left" Margin="238,240,0,0" TextWrapping="Wrap" Text="{Binding Path=Comment,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120"/>
        <Label Content="Cleanliness" HorizontalAlignment="Left" Margin="63,65,0,0" VerticalAlignment="Top"/>
        <Label Content="Owner" HorizontalAlignment="Left" Margin="63,155,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.491,3.334"/>
        <Label Content="Comment" HorizontalAlignment="Left" Margin="66,236,0,0" VerticalAlignment="Top"/>
        <Label Content="Pictures :" HorizontalAlignment="Left" Margin="74,299,0,0" VerticalAlignment="Top"/>
        <Button Command="{Binding AddCommand}" Content="Add" HorizontalAlignment="Left" Margin="268,299,0,0" VerticalAlignment="Top" Height="26" Width="60" />

    </Grid>
</Window>
