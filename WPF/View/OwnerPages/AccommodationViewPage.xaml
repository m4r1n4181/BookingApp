<Page x:Class="BookingApp.WPF.View.OwnerPages.AccommodationViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:BookingApp.WPF.View.OwnerPages"
      mc:Ignorable="d"
      d:DesignHeight="700"
      d:DesignWidth="430"
      Title="AccommodationViewPage">

    <Grid Background="#AFD06E">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="161" />
            <RowDefinition Height="Auto"
                           MinHeight="48" />
            <RowDefinition Height="Auto"
                           MinHeight="45" />
            <RowDefinition Height="Auto"
                           MinHeight="46" />
            <RowDefinition Height="Auto"
                           MinHeight="47.82" />
            <RowDefinition Height="Auto"
                           MinHeight="43.94" />
            <RowDefinition Height="Auto"
                           MinHeight="48" />
            <RowDefinition Height="Auto"
                           MinHeight="86.9" />
        </Grid.RowDefinitions>



        <Grid Margin="0,10,0,0"
              Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image Source="{Binding accommodation.Pictures[0]}"
                   Width="140"
                   Height="140"
                   Margin="38,60,37,11" />
            <Image Source="{Binding accommodation.Pictures[1]}"
                   Width="140"
                   Height="140"
                   Margin="37,60,37,11"
                   Grid.Column="1" />
            <Button Content="&lt;"
                    Width="50"
                    Height="50"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    FontWeight="Bold"
                    FontSize="30"
                    Grid.Column="0"
                    Margin="-10,102,175,59" />
            <Button Content="&gt;"
                    Width="50"
                    Height="50"
                    FontSize="30"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    FontWeight="Bold"
                    Grid.Column="1"
                    Margin="174,102,-9,59" />
            <TextBlock HorizontalAlignment="Left"
                       Margin="10,10,0,0"
                       FontSize="28"
                       TextWrapping="Wrap"
                       Grid.Row="0"
                       Text="{Binding accommodation.Name}"
                       FontWeight="Bold"
                       VerticalAlignment="Top"
                       Width="269"
                       Height="50"
                       Grid.ColumnSpan="2" />
        </Grid>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    Margin="10,7,10,7">
            <TextBlock Text="Location: "
                       FontWeight="Bold"
                       FontSize="18" />
            <TextBlock Text="{Binding accommodation.Location.City}"
                       FontSize="18" />
            <TextBlock Text=", "
                       FontSize="18" />
            <TextBlock Text="{Binding accommodation.Location.Country}"
                       FontSize="18" />

        </StackPanel>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    Margin="10,7,10,7">
            <TextBlock Text="Type: "
                       FontWeight="Bold"
                       FontSize="18" />
            <TextBlock Text="{Binding accommodation.Type}"
                       FontSize="18" />
        </StackPanel>

        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    Margin="10,7,10,7">
            <TextBlock Text="Maximum number of guests: "
                       FontWeight="Bold"
                       FontSize="18" />
            <TextBlock Text="{Binding accommodation.MaxGuests}"
                       FontSize="18" />
        </StackPanel>

        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    Margin="10,7,10,7">
            <TextBlock Text="Minimum days for reservation: "
                       FontWeight="Bold"
                       FontSize="18" />
            <TextBlock Text="{Binding accommodation.MinReservationDays}"
                       FontSize="18" />
        </StackPanel>

        <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    Margin="10,7,10,7">
            <TextBlock Text="Minimum cancellation days: "
                       FontWeight="Bold"
                       FontSize="18" />
            <TextBlock Text="{Binding accommodation.CancellationDays}"
                       FontSize="18" />
        </StackPanel>

        <StackPanel Grid.Row="7"
                    Orientation="Horizontal"
                    Margin="10,7,10,7">
            <TextBlock Text="Description:"
                       FontWeight="Bold"
                       FontSize="18" />
            <TextBlock Text=" Cozy and pet-friendly!"
                       TextWrapping="Wrap"
                       FontSize="18"
                       Width="400" />
        </StackPanel>


        <Button Content="edit"
                Width="100"
                Grid.Row="8"
                Margin="34,5,0,58"
                HorizontalAlignment="Left"
                Background="#DD9B64" />
        <Button Content="view statistics"
                Width="150"
                Background="#87AECE"
                Margin="242,5,0,58"
                Command="{Binding ViewStatisticsCommand}"
                Grid.Row="8"
                HorizontalAlignment="Left" />

    </Grid>
</Page>
