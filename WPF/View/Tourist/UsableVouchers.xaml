<Page x:Class="BookingApp.WPF.View.Tourist.UsableVouchers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:BookingApp.WPF.View.Tourist"
      xmlns:vm="clr-namespace:BookingApp.WPF.View.Tourist"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UsableVouchers">

	<Grid>
		<DataGrid ItemsSource="{Binding Vouchers}" SelectedItem="{Binding Path=SelectedVoucher}" AutoGenerateColumns="False">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Voucher Type" Binding="{Binding Type}" />
				<DataGridTextColumn Header="Expiration Date" Binding="{Binding ExpirationDate}" />
			</DataGrid.Columns>
		</DataGrid>
		<Button Content="Use Voucher" Command="{Binding UseVoucherCommand}" Height="35" Width="140" HorizontalAlignment="Center" Margin="5"/>
	</Grid>
</Page>
