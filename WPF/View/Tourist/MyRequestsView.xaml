<Page x:Class="BookingApp.WPF.View.Tourist.MyRequestsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookingApp.WPF.View.Tourist"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MyRequestsView">

    <Grid>
        <DataGrid ItemsSource="{Binding TourRequests}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tour Request" Binding="{Binding Description}" />
                <DataGridTextColumn Header="Request Status" Binding="{Binding RequestStatus}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
