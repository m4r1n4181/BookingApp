<Window x:Class="BookingApp.View.TourReviewForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingApp.View"
        mc:Ignorable="d"
        Title="TourReviewForm" Height="450" Width="800">
    <Grid>
        <Label Content="Tour Review" HorizontalAlignment="Left" Margin="51,46,0,0" VerticalAlignment="Top" Width="172" FontSize="16"/>
        <Label Content="Guide's knowledge" HorizontalAlignment="Left" Margin="53,113,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox Name ="KnowledgeTextBox" Text="{Binding Path=Knowledge, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="201,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Guide's fluency" HorizontalAlignment="Left" Margin="53,186,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name ="FluencyTextBox" Text="{Binding Path=Fluency, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="201,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>
        <Label Content="Tour appealance" HorizontalAlignment="Left" Margin="53,186,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name ="TourAppealTextBox" Text="{Binding Path=TourAppeal, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="201,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>
        <Label Content="Comment" HorizontalAlignment="Left" Margin="53,307,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox Name ="CommentTextBox" Text="{Binding Path=Comment, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="201,320,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Name ="Cancel"  Content="cancel" HorizontalAlignment="Left" Margin="490,227,0,0" VerticalAlignment="Top" Click="Cancel_Click"/>
        <Button Name ="Save" Content="save" HorizontalAlignment="Left" Margin="670,227,0,0" VerticalAlignment="Top" Click="Save_Click"/>

    </Grid>
</Window>
