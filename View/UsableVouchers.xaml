<Window x:Class="BookingApp.View.UsableVouchers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingApp.View"
        mc:Ignorable="d"
        Title="My Vouchers" Height="450" Width="800">
    <Grid>
        <DataGrid ItemsSource="{Binding Vouchers}" SelectedItem="{Binding Path=SelectedVoucher}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Voucher Type" Binding="{Binding Type}" />
                <DataGridTextColumn Header="Expiration Date" Binding="{Binding ExpirationDate}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Use Voucher" Click="UseVoucher_Click" Height="35" Width="140" HorizontalAlignment="Center" Margin="5"/>
    </Grid>
</Window>
